<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/mainitem_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="@dimen/px30dp"
        android:layout_marginLeft="@dimen/px84dp"
        android:layout_marginBottom="@dimen/px44dp"
        android:layout_marginTop="@dimen/px44dp"
        android:ellipsize="end"
        android:maxLines="2"
        android:text="@string/popular_classification"
        android:textColor="@color/white"
        android:textSize="@dimen/px32sp" />

    <TextView
        android:id="@+id/tv_num"
        android:layout_width="@dimen/px30dp"
        android:layout_height="@dimen/px30dp"
        android:layout_gravity="top|right"
        android:layout_marginTop="@dimen/px24dp"
        android:layout_marginRight="@dimen/px60dp"
        android:autoSizeMaxTextSize="@dimen/px24sp"
        android:autoSizeMinTextSize="@dimen/px2sp"
        android:autoSizeTextType="uniform"
        android:background="@drawable/point"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="@dimen/px24sp"
        android:visibility="visible" />
</FrameLayout>